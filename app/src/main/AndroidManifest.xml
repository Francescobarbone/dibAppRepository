<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dibapp.dibapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".home.LezioneActivity"></activity>
        <activity android:name=".CreaLezioneActivity" />
        <activity android:name=".QRCodeScanner" />
        <activity android:name=".autenticazione.ForgotPasswordActivity" />
        <activity android:name=".home.StudenteActivity" />
        <activity android:name=".home.DocenteActivity" />
        <activity
            android:name=".home.HomeActivity"
            android:noHistory="true" />
        <activity android:name=".autenticazione.RegistrazioneActivity" />
        <activity
            android:name=".autenticazione.MainActivity"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>